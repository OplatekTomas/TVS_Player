<UserControl x:Class="TVSPlayer.SubtitlePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSPlayer"
             mc:Ignorable="d" 
             Height="55" d:DesignWidth="250">
    <Grid>
        <Grid HorizontalAlignment="Left" Width="3" Background="{DynamicResource AccentColor}" x:Name="ItemSelected"/>
        <TextBlock Text="No subtitles" Foreground="#F5F5F5" Margin="10,5,0,5" FontSize="16" VerticalAlignment="Center" x:Name="Version" TextWrapping="Wrap" />
    </Grid>
</UserControl>
